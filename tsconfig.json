{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ESNext", "ES2021"],
    "types": ["node", "jest"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "outDir": "./dist",
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules",
    "tests",
  ]
}
